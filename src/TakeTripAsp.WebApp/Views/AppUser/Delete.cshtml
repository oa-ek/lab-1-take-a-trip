@using TakeTripAsp.Application.Features.AppUserFeatures.AppUserDto;
@model ReadAppUserDto


@{
    ViewData["Title"] = "Видалення";
    Layout = "_TakeATripAdminLayout";
}

<h1>Видалення</h1>

<h3>Дійсно хочете видалити цей елемент?</h3>
<div>
    <h4>Користувачі</h4>
    <hr />
    <dl class="row ml-3 mb-3">
        <dt class="col-sm-2">
           Пошта
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            І'мя'
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
          Прізвище
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            Роль
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value=" Видалити " class="btn btn-outline-danger btn-fw" />
        <a asp-action="Index" class="btn btn-outline-info btn-fw">Повернутись до списку</a>
    </form>
</div>