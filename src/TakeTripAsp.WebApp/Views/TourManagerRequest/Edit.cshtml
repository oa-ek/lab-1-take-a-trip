@model TakeTripAsp.Core.Entity.TourManagerRequest

@{
    ViewData["Title"] = "Edit";
    Layout = "_TakeATripAdminLayout";
}

<h1>Редагування</h1>

<h4>Запит на роль</h4>
<hr />
<div class="row ml-3 mb-3">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsApproved" /> @Html.DisplayNameFor(model => model.IsApproved)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompanyMember" /> @Html.DisplayNameFor(model => model.IsCompanyMember)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSeller" /> @Html.DisplayNameFor(model => model.IsSeller)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value=" Редагувати " class="btn btn-outline-primary btn-fw" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-info btn-fw">Повернутись до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}