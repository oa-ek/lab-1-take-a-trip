@using TakeTripAsp.Application.Features.ReviewsFeatures.ReviewsDtos;
@model CreateReviewsDto

@{
    ViewData["Title"] = "Create";
    Layout = "_TakeATripAdminLayout";
}

<h1>Створити</h1>

<h4>Відгуки</h4>
<hr />
<div class="row ml-3 mb-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control content-wrapper" style="width: 600px; height: 200px; resize: vertical; word-wrap: break-word; overflow-y: auto;"></textarea>
                @*<input asp-for="Comment" class="form-control content-wrapper" style="width: 600px; height: 200px; text: wrapped" />*@
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="tour">Оберіть тур:</label>
                <select class="form-control" id="tour" name="tourId">
                    @if (ViewBag.Tours != null)
                    {
                        foreach (var tour in ViewBag.Tours)
                        {
                            <option value="@tour.Id">@tour.Name</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success btn-fw" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-inverse-info btn-fw">Повернутись до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

