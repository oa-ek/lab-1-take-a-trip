@using TakeTripAsp.Application.Features.ReviewsFeatures.ReviewsDtos;
@model CreateReviewsDto

@{
    ViewData["Title"] = "Create";
    Layout = "_TakeATripAdminLayout";
}

<h1>Створити</h1>

<h4>Відгук</h4>
<hr />
<div class="row ml-3 mb-3">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Reviews">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control content-wrapper" style="width: 600px; height: 200px; resize: vertical; word-wrap: break-word; overflow-y: auto;"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-outline-success btn-fw" />
            </div>
        </form>
    </div>
</div>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-info btn-fw">Повернутись до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

