@using TakeTripAsp.Application.Features.ReviewsFeatures.ReviewsDtos;
@model ReadReviewsDto
@{
    ViewData["Title"] = "Edit";
    Layout = "_TakeATripAdminLayout";
}

<h1>Редагування</h1>

<h4>Відгуку</h4>
<hr />
<div class="row ml-3 mb-3">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control justify-content-start" style="width: 600px; height: 200;" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="tour">Оберіть тур:</label>
                <select class="form-control" id="tour" name="TourId">
                    @foreach (var tour in ViewBag.Tours)
                    {
                        <option value="@tour.Id">@tour.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value=" Редагувати " class="btn btn-outline-primary btn-fw" />
            </div>
        </form>
    </div>
</div>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-info btn-fw">Повернутись до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

