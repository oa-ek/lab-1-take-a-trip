@model IEnumerable<TakeTripAsp.Core.Entity.Bookings>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsFullPayment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TourId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingStatusId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFullPayment)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Tour.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingStatus.BookingStatusName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Payment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }) |
                    @Html.ActionLink("Delete", "Delete", new {  id=item.Id  })
                </td>
            </tr>
        }
    </tbody>
</table>
