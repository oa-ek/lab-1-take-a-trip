@using TakeTripAsp.Application.Features.BookingFeatures.BookingsDtos;
@model CreateBookingsDto

@{
    ViewData["Title"] = "Створити";
    Layout = "_TakeATripAdminLayout";
}

<h1>Створити</h1>

<h4>Бронювання</h4>
<hr />
<div class="row ml-3 mb-3">
    <div class="col-md-4" style="width: 500px;">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <dt class="col-sm-2">
            Назва туру
        </dt>
        <dd class="col-sm-10" >
                @Html.DisplayFor(model => model.TourName)
        </dd>
        <input type="hidden" name="TourId" value="@Model.TourId" />
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsFullPayment" /> Оплатити повністю
            </label>
        </div>
        <div class="form-group">
            <input type="submit" value="Створити" class="btn btn-outline-success btn-fw" />
        </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-inverse-info btn-fw">Повернутись до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}