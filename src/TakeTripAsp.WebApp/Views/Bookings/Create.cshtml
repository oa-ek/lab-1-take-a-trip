@model TakeTripAsp.Core.Entity.Bookings

@{
    ViewData["Title"] = "Створити";
    Layout = "_TakeATripAdminLayout";

}

<h1>Створити</h1>

<h4>Бронювання</h4>
<hr />
<div class="row ml-3 mb-3">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsFullPayment" /> @Html.DisplayNameFor(model => model.IsFullPayment)
                </label>
            </div>
            <div class="form-group">
                <label for="tour">Оберіть тур:</label>
                <select class="form-control" id="tour" name="tourId">
                    @foreach (var tour in ViewBag.Tours)
                    {
                        <option value="@tour.Id">
                            @tour.Name
                            <div>Повна вартість @tour.FullPrice </div>
                            <div>Вартість бронювання @tour.BookingPrice </div>
                        </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="status">Оберіть статус:</label>
                <select class="form-control" id="status" name="statusId">
                    @foreach (var status in ViewBag.Status)
                    {
                        <option value="@status.Id">@status.BookingStatusName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success btn-fw" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-inverse-info btn-fw">Повернутись до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
