@using TakeTripAsp.Application.Features.BookingFeatures.BookingsDtos;
@model ReadBookingsDto

@{
    ViewData["Title"] = "Видалити";
    Layout = "_TakeATripAdminLayout";
}

<h1>Видалити</h1>

<h3>Дійсно хочете видалити цей елемент?</h3>
<div>
    <h4>Бронювання</h4>
    <hr />
    <dl class="row ml-3 mb-3">
        <dt class = "col-sm-2">
            Оплата
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsFullPayment)
        </dd>
        <dt class = "col-sm-2">
            Клієнт
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientId)
        </dd>
        <dt class = "col-sm-2">
            Тур
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TourId)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Видалити" class="btn btn-outline-danger btn-fw" />
        <a asp-action="Index" class="btn btn-inverse-info btn-fw">Повернутись до списку</a>
    </form>
</div>
