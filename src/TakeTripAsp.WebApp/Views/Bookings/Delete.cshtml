@model Bookings
@using TakeTripAsp.Domain.Entity;

@{
    ViewData["Title"] = "Видалити";
    Layout = "_TakeATripAdminLayout";
}

<h1>Видалити</h1>

<h3>Дійсно хочете видалити цей елемент?</h3>
<div>
    <h4>Бронювання</h4>
    <hr />
    <dl class="row ml-3 mb-3">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsFullPayment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsFullPayment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tour)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tour.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BookingStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BookingStatus.BookingStatusName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger btn-rounded btn-fw"/>
        <a asp-action="Index" class="btn btn-inverse-info btn-fw">Повернутись до списку</a>
    </form>
</div>
