@using TakeTripAsp.Application.Features.StatusFeatures.StatusDtos;
@model IEnumerable<ReadStatusDto>

@{
    ViewData["Title"] = "Статус";
    Layout = "_TakeATripAdminLayout";
}

<h1>Статус</h1>

<p>
    <a asp-controller="Status" asp-action="Create" class="btn btn-inverse-primary btn-fw">Створити</a>
</p>
<table class="table-bordered ml-3 mb-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("  Id  ")
            </th>
            <th>
                @Html.DisplayName("Назва статусу туру")
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    <a class="btn btn-outline-secondary btn-fw" href="@Url.Action("Edit", "Status", new { id = item.Id })">Редагувати</a>
                    <a class="btn btn-outline-dark btn-fw" href="@Url.Action("Delete", "Status", new { id = item.Id, Name =  item.Name })">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>


