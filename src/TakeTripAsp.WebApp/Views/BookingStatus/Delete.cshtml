@using TakeTripAsp.Application.Features.BookingStatusFeatures.BookingStatusDtos;
@model ReadBookingStatusDto

@{
    ViewData["Title"] = "Видалення";
    Layout = "_TakeATripAdminLayout";
}

<h1>Видалити</h1>

<h3>Дійсно хочете видалити цей елемент?</h3>
<div>
    <h4>Статус бронювання</h4>
    <hr />
    <dl class="row ml-3 mb-3">
        <dt class="col-sm-2">
            Назва 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Видалити" class="btn btn-outline-danger btn-fw" />
    </form>
</div>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-info btn-fw">Повернутись до списку</a>
</div>



