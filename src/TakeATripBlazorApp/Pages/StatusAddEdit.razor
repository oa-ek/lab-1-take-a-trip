@page "/status/add"
@page "/status/edit/{statusId:int}"
@using TakeATripBlazorApp.IServices
@using TakeATripBlazorApp.Model;
@inject IStatusService statusService
<PageTitle>@Title</PageTitle>

<h3>@Title</h3>
<a href="/statuses" class="btn btn-outline-dark">Show All</a>
<div class="row">
    <div class="col-md-6">
        <EditForm Model="@status" OnValidSubmit="Save">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="StatusName">Status Name</label>
                <InputText class="form-control" @bind-Value="status.StatusName" />
                <ValidationMessage For="@(()=>status.StatusName)" />
            </div>

            <div class="my-2">
                @message
            </div>

            <div class="my-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [Parameter]
    public int StatusId { get; set; }
    private string message = string.Empty;
    private Status status = new();
    private string Title = "Add Status";

    private void Save()
    {
        message = "wait...";
        if (statusService.AddUpdate(status))
        {
            message = "Successfully added";
            status = new();
        }
        else
        {
            message = "Could not be saved";
        }
    }

    protected override void OnInitialized()
    {
        if (StatusId > 0)
        {
            Title = "Update Status";
            status = statusService.FindById(StatusId);
        }
        base.OnInitialized();
    }
}
